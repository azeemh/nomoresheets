<%- model_class = RealAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:startdate) %>:</strong></dt>
  <dd><%= @real_account.startdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ip) %>:</strong></dt>
  <dd><%= @real_account.ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @real_account.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @real_account.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fb_email) %>:</strong></dt>
  <dd><%= @real_account.fb_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fb_pw) %>:</strong></dt>
  <dd><%= @real_account.fb_pw %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fb_profile_link) %>:</strong></dt>
  <dd><%= @real_account.fb_profile_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paypal_email) %>:</strong></dt>
  <dd><%= @real_account.paypal_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:referrer_paypal) %>:</strong></dt>
  <dd><%= @real_account.referrer_paypal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @real_account.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disbursement_date) %>:</strong></dt>
  <dd><%= @real_account.disbursement_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disbursement_amount) %>:</strong></dt>
  <dd><%= @real_account.disbursement_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skype_username) %>:</strong></dt>
  <dd><%= @real_account.skype_username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @real_account.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              real_accounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_real_account_path(@real_account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              real_account_path(@real_account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
