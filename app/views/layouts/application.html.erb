<!DOCTYPE html>
<html>
  <head>
    <title>Nomoresheets</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= nav_bar responsive: true, brand: "Brand Ambassadors" do %>
      <%= menu_group do %>
          <%= menu_item "Smurves", smurves_path %>
          <%= menu_item "Real Accounts", real_accounts_path %>
          <%= menu_item "About Us", about_path %>
      <% end %>
      <%= menu_group pull: :right do %>
        <% if logged_in? %>
          <%= menu_item current_user.email %>
          <%= menu_item "Sign out", sign_out_path %>
        <% else %>
          <%= menu_item "Sign in", sign_in_path %>
        <% end %>
      <% end %>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
