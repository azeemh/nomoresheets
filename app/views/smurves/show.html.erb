<%- model_class = Smurf -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:startdate) %>:</strong></dt>
  <dd><%= @smurf.startdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @smurf.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ip) %>:</strong></dt>
  <dd><%= @smurf.ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @smurf.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @smurf.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:login) %>:</strong></dt>
  <dd><%= @smurf.login %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @smurf.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cardtype) %>:</strong></dt>
  <dd><%= @smurf.cardtype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creditcardnumber) %>:</strong></dt>
  <dd><%= @smurf.creditcardnumber %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @smurf.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paypalemail) %>:</strong></dt>
  <dd><%= @smurf.paypalemail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @smurf.notes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              smurves_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_smurf_path(@smurf), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              smurf_path(@smurf),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
